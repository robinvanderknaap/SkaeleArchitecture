@model Web.ViewModels.Login.LoginViewModel

@section Title { @T.Login }
@section MainMenu {}
@section Footer {}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="icon-lock"></i>Skaele Architecture - @T.Login
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    <div id="messageContainer"></div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Email, (string)T.Email)
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", data_val = "true", data_val_required = T.Required, data_val_email = T.InvalidEmailAddress })
                        @Html.FocusFor(x=>x.Email)
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password, (string)T.Password)
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", data_val = "true", data_val_required = T.Required })
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">@T.SignIn</button>
                    </div>
                }
            </div>
            <div class="panel-footer">
                <a href="@Url.Action("ResetPassword")" style="color: #333;">@T.ResetPassword</a>
            </div>
        </div>
    </div>
</div>
