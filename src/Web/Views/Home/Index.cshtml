@section Title { Dashboard }

<div class="jumbotron">
    <div class="container">
        <h1>Skaele Architecture</h1>
        <p>'<em><small>My name is Chuck Norris and I approve this architecture</small></em>'</p>
        <p><a class="btn btn-primary btn-lg">Learn more</a></p>
