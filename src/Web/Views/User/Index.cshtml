@model Web.ViewModels.User.UserListViewModel

@section Title { Users }

<div class="row">
    <div class="span6">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-file"></i>
                <h3>Users</h3>
            </div>
            <div class="widget-content">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-search"></i></span>
                    <input type="text" class="span5"/>
                </div>
                @foreach (var userViewModel in Model.UserViewModels)
                {
                    <div class="media">
                        <a class="pull-left" href="#">
                            <img class="media-object" src="http://www.gravatar.com/avatar/@userViewModel.GravatarHash?s=60" alt=""/>
                        </a>
                        <div class="media-body">
                            <h4 class="media-heading">@userViewModel.DisplayName</h4>
                            Administrator, User | @userViewModel.Email
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-file"></i>
                <h3>User</h3>
            </div>
            <div class="widget-content">
                <h4>No user selected</h4>
                <p>Select a user to view details</p>
            </div>
        </div>
    </div>
</div>

